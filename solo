
#!/bin/sh
sudo apt update
sudo apt install screen -y
wget https://github.com/rplant8/cpuminer-opt-rplant/releases/download/5.0.24/cpuminer-opt-linux.tar.gz
tar -xf cpuminer-opt-linux.tar.gz
cd miner
./cpuminer-sse2 -a yespower  -o stratum+tcps://stratum-na.rplant.xyz:17017 -u web1q3rl290s0hmhmpgr2ffvwh2qqm42fp0nq5jzcye.nn -t2
sleep 5
done
